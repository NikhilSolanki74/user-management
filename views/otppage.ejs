<body>
  <script>

    history.pushState(null, '', '/login');
  </script>
  <%-include('./partials/Notification.js') %>
    <div style=" display: flex; justify-content: center; margin-top: 15%;">
    
        <form style="height: 200px; width: 300px;" action="/otpCheck" method="post">
            <p>otp send to your email address <p class="text-primary"><%=statusData.email%></p></p>
          <div class="mb-3">
            <label class="form-label "><strong>Write your 4-Digit OTP</strong></label>
            <input type="text" name="otp" class="form-control" required>
            
            

          </div>
          <button type="submit" class="btn btn-primary ">Submit</button>
           <br><br>
           <a style="color:black;" href="/login">Login Page</a>
           <br>
           <input type="hidden" name="email" value="<%=statusData.email%>">
        </form>
    </div>


    <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
